{
  "compilerOptions": {
    "target": "es6",
    "module": "ES2020",
    "declaration": true,
    "moduleResolution": "node",
    "strict": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["es2015", "dom"],
    "types": ["vite/client"],
    "outDir": "dist"
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "node_modules",
    "dist",
    "tests",
    "src/integrations/browser/sw/sw.ts"
  ]
}
